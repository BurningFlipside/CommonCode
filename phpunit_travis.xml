<?xml version="1.0" encoding="UTF-8"?>

<phpunit colors="true" verbose="true" stderr="true" backupGlobals="false" backupStaticAttributes="false">
    <testsuites>
        <testsuite name="Common Code Test Suite">
            <directory>./tests/</directory>
            <directory>./tests/travis/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./</directory>
            <exclude>
                <directory>./tests</directory>
                <directory>./libs</directory>
                <directory>./js</directory>
                <directory>./vendor</directory>
                <file>./cron.php</file>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
